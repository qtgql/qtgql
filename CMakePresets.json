{
    "version": 3,
    "configurePresets": [
        {
            "name": "Debug",
            "binaryDir": ".cmake_build/",
            "installDir": ".cmake_build/install",
            "cacheVariables": {
                "CMAKE_BUILD_DIR": ".cmake_build",
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_EXTENSIONS": "OFF",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "QTGQL_VERSBOSE": "ON",
                "QTGQL_TESTING": "OFF"
            }
        },
        {
            "name": "coverage",
            "inherits": "Debug",
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "--coverage"
            }
        },
        {
            "name": "clang-tools",
            "inherits": "Debug",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "clang++"
            }
        },
        {
            "name": "asan",
            "inherits": "clang-tools",
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "-fno-omit-frame-pointer -fsanitize=address"
            }
        },
        {
            "name": "ubsan",
            "inherits": "clang-tools",
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "-fno-omit-frame-pointer -fno-sanitize-recover=all -fsanitize=undefined"
            }
        },
        {
            "name": "test",
            "binaryDir": "tests/build/",
            "inherits": [
                "Debug"
            ],
            "cacheVariables": {
                "QTGQL_TESTING": true,
                "QTGQL_VERBOSE": true
            }
        }
    ],
    "buildPresets": [
        {
            "name": "Build default",
            "configurePreset": "Debug",
            "jobs": 4,
            "targets": [
                "all"
            ]
        },
        {
            "name": "test",
            "configurePreset": "test",
            "jobs": 4,
            "targets": [
                "all"
            ]
        }
    ],
    "testPresets": [
        {
            "name": "Test default preset",
            "configurePreset": "test",
            "output": {
                "shortProgress": true,
                "outputOnFailure": true
            }
        }
    ]
}
